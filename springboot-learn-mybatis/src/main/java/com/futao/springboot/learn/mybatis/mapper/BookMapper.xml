<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.futao.springboot.learn.mybatis.mapper.BookMapper">
    <insert id="add" parameterType="com.futao.springboot.learn.mybatis.model.Book">
        insert into springboot_learn_persistent_mybatis.mybatis_book (id, name, author)
        values (#{id}, #{name}, #{author})
    </insert>

    <update id="update" parameterType="com.futao.springboot.learn.mybatis.model.Book">
        update springboot_learn_persistent_mybatis.mybatis_book
        set name=#{name},
            author=#{author}
        where id = #{id}
    </update>


    <delete id="delete" parameterType="int">
        delete
        from springboot_learn_persistent_mybatis.mybatis_book
        where id = ${value}
    </delete>

    <select id="byId" parameterType="int" resultType="com.futao.springboot.learn.mybatis.model.Book">
        select *
        from springboot_learn_persistent_mybatis.mybatis_book
        where id = #{value}
        limit 1
    </select>

    <select id="list" resultType="com.futao.springboot.learn.mybatis.model.Book">
        select *
        from springboot_learn_persistent_mybatis.mybatis_book
    </select>
</mapper>